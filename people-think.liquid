{% schema %}
  {
    "name": "People Think",
    "settings": [
      {
        "type": "header",
        "content": "People Think Section"
      },
      {
        "type": "text",
        "id": "people-heading",
        "label": "Main Heading",
        "default": "What The People Think"
      }
    ],
    "blocks": [
    {
      "type": "people-video",
      "name": "Add Video Testimonials",
      "limit": 6,
      "settings": [
        {
          "type": "url",
          "label": "Video Testimonial",
          "id": "video_testimonials"
        }
      ]
    },
      {
      "type": "text",
      "name": "Add Testimonials",
      "limit": 6,
      "settings": [
        {
          "type": "image_picker",
          "label": "Ratings",
          "id": "testi-rating"
        },
        {
          "type": "richtext",
          "label": "Testimonial",
          "id": "testi-text"
        },
        {
          "type": "text",
          "label": "Testimonial Author",
          "id": "testi-author"
        },
        {
          "type": "checkbox",
          "label": "Verify Buyer",
          "id": "testi-buyers",
          "default":true
        }
      ]
    }
  ],
        "presets": [
    {
      "name": "People Think"
    }
  ]
  }
{% endschema %}

