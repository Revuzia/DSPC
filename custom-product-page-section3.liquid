<section class="custom-ptoduct-page-sec3">
    <div class="page-width">
        <div class="row">
            <div class="col-lg-6">
                <div class="sec3-left-content">
                    <div class="sec3-heading">
                        <h2>{{ section.settings.main_heading }}</h2>
                        <p>{{ section.settings.sub_heading }}</p>
                    </div>
                    <div class="ingredients">
                        <p>{{ section.settings.nutrition1 }}</p>
                        <span>{{ section.settings.quantity1 }}</span>
                    </div>
                    <div class="ingredients">
                        <p>{{ section.settings.nutrition2 }}</p>
                        <span>{{ section.settings.quantity2 }}</span>
                    </div>
                    <div class="ingredients">
                        <p>{{ section.settings.nutrition3 }}</p>
