                        <span>{{ section.settings.quantity5 }}</span>
                    </div>
                    <div class="ingredients">
                        <p>{{ section.settings.nutrition6 }}</p>
                        <span>{{ section.settings.quantity6 }}</span>
                    </div>
                    <div class="serving-size">
                        <p>{{ section.settings.serving-size }}</p>
                        <span>{{ section.settings.serving-quantity }}</span>
                    </div>
                    <div class="sponsor">
                        <div class="sponsor-logo"><img src="{{ section.settings.sponsor_logo | image_url }}" alt=""></div>
                    </div>
                </div>
            </div>
            <div class="col-lg-6 sec3-right-content-col">
                <div class="sec3-right-content">
                    <div class="fruit"><h4>{{ section.settings.text1 }}</h4></div>
                    <div class="taste"><h4>{{ section.settings.text2 }}</h4></div>
                </div>
            </div>
        </div>
    </div>
</section>

